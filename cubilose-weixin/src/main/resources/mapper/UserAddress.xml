<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cubilose.weixin.mapper.UserAddressMapper">

	<sql id="BASE_COLUMN">
		user_id, address, phone_number
	</sql>

	<insert id="insert" useGeneratedKeys="true" parameterType="UserAddress"
			keyColumn="id" keyProperty="id">
		INSERT INTO user_address(user_id, address, phone_number)
		VALUES (#{userId}, #{address}, #{phoneNumber})
	</insert>

	<update id="delete" keyColumn="id">
		UPDATE coupon
		SET status = -1
		WHERE id = #{id}
	</update>

	<resultMap id="BASE_MAP" type="Coupon">
		<result column="id" property="id" />
		<result column="code" property="code" />
		<result column="price" property="price" />
		<result column="end_time" property="endTime" />
		<result column="status" property="status" />
	</resultMap>

	<select id="list" resultType="java.util.List" resultMap="BASE_MAP">
		SELECT id, <include refid="BASE_COLUMN" />
		FROM coupon
	</select>

	<select id="getById" resultMap="BASE_MAP" resultType="Coupon">
		SELECT id, <include refid="BASE_COLUMN" />
		FROM coupon
		WHEN id = #{id}
	</select>

	<select id="getByCode" resultMap="BASE_MAP" resultType="Coupon">
		SELECT id, <include refid="BASE_COLUMN" />
		FROM coupon
		WHEN code like #{code}
	</select>

	<select id="listByIdOrCode" resultType="java.util.List" resultMap="BASE_MAP">
		SELECT id, <include refid="BASE_COLUMN" />
		FROM coupon
		WHERE CONCAT(id, code) LIKE #{params}
	</select>

</mapper>